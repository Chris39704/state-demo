{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "DOM",
      "ScriptHost",
      "esnext"
    ],
    "baseUrl": "src",
    "allowJs": true,
    "pretty": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/.*/",
    "**/node_modules/*",
    "**/dist/*",
    "**/build/*",
    "**/coverage/*",
    "**/Plop/*",
  ]
}